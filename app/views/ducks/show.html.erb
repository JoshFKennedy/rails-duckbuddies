<p class="text-center">
  <% if @duck.photo.attached? %>
    <%= cl_image_tag @duck.photo.key %>
  <% end %>
</p>

<p class="text-center">
  <strong>Name:</strong>
  <%= @duck.name %>
</p>

<p class="text-center">
  <strong>Nationality:</strong>
  <%= @duck.nationality %>
</p>

<p class="text-center">
  <strong>Age:</strong>
  <%= @duck.age %>
</p>

<p class="text-center">
  <strong>Description:</strong>
  <%= @duck.description %>
</p>

<div class="text-center">
  <%= link_to 'Book this duck', new_duck_booking_path(@duck) %>
</div>
<div class="text-center">
  <%= link_to 'Back', ducks_path %>
</div>
