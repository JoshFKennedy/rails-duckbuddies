<h1 class="text-center">Book a Duck</h1>

<div class="container center_div" style="width: 500px" id='duck-booking-dates' data-unavailable="<%= @duck.unavailable_dates.to_json %>">
  <%= simple_form_for [ @duck, @booking ] do |f| %>
    <div class="p-3">
      <%= f.label :start_date, "Start Date:" %>
      <%= f.date_field :start_date, as: :string, value: f.object.try(:strftime,"%d/%m/%Y"), class: 'form-control' %>
    </div>
    <div class="p-3">
      <%= f.label :end_date, "End Date:" %>
      <%= f.date_field :end_date, as: :string, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
    </div>
    <div class="p-3">
      <%= f.submit "Book that Duck!", class: "btn btn-primary" %>
    </div>
<% end %>
</div>
