<h1 class="text-center">My Duckventures!</h1>

<div class="duck-body">
  <% @bookings.each do |booking| %>
    <div class="booked-duck">
      <%= cl_image_tag booking.duck.photo.key %>
      <div class="booked-duck-details">
        <h2><%= link_to booking.duck.name, duck_path(booking.duck_id) %></h2>
        <p><%= booking.duck.description %></p>
      </div>
      <div class="booked-duck-dates">
        <p><em><%= booking.start_date.strftime('%A %B %d, %Y') %></em></p>
        <p class="ampersand"><em>to</em></p>
        <p><em><%= booking.end_date.strftime('%A %B %d, %Y') %></em></p>
      </div>
      <div class="cancel-link">
        <%= link_to "Cancel booking", booking_path(booking.id), method: :delete %>
      </div>
    </div>
  <% end %>
</div>
