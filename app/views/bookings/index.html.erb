<h1 class="text-center">My Duckventures!</h1>

<div class="text-center">
  <% @bookings.each do |booking| %>
    <div class="card-duck">
      <%= image_tag booking.duck.photo %>
        <div class="card-infos">
          <div>
            <h2><%= booking.duck.name %></h2>
            <p><em><%= booking.start_date.strftime('%A %B %d, %Y') + " -"%></em></p>
            <p><em><%= booking.end_date.strftime('%A %B %d, %Y') %></em></p>
          </div>
          <div class="card-bottom">
            <h2><%= link_to "Duck details", duck_path(booking.duck_id) %></h2>
          </div>
        </div>
    </div>
  <% end %>
</div>
